#!/bin/bash
#
# Author: Bala Raman <srbala@gmail.com>
# /usr/local/bin/printinfo
#
TCPU=`lscpu | grep "Model name" |  awk -F: '{print $2;}' | awk '{ sub(/^[ \t]+/, ""); print }'`
MEMORY1=`free -t -m | grep "Mem" | awk '{print $4" MB";}'`
MEMORY2=`free -t -m | grep "Mem" | awk '{print $2" MB";}'`
MEMORY3=`free -t -m | grep "Swap" | awk '{print $4" MB";}'`
MEMORY4=`free -t -m | grep "Swap" | awk '{print $2" MB";}'`
PSA=`ps -Afl | wc -l`

# time of day
HOUR=$(date +"%H")
if [ $HOUR -lt 12  -a $HOUR -ge 0 ]
then    TIME="morning"
elif [ $HOUR -lt 17 -a $HOUR -ge 12 ] 
then    TIME="afternoon"
else 
    TIME="evening"
fi

#System uptime
uptime=`cat /proc/uptime | cut -f1 -d.`
upDays=$((uptime/60/60/24))
upHours=$((uptime/60/60%24))
upMins=$((uptime/60%60))
upSecs=$((uptime%60))

#System load
LOAD1=`cat /proc/loadavg | awk {'print $1'}`
LOAD5=`cat /proc/loadavg | awk {'print $2'}`
LOAD15=`cat /proc/loadavg | awk {'print $3'}`

echo "
   ____           _    ___  ____    ____  _                               ___  
  / ___|___ _ __ | |_ / _ \/ ___|  / ___|| |_ _ __ ___  __ _ _ __ ___    / _ \ 
 | |   / _ \ '_ \| __| | | \___ \  \___ \| __| '__/ _ \/ _' | '_ ' _ \  | (_) | 
 | |__|  __/ | | | |_| |_| |___) |  ___) | |_| | |  __/ (_| | | | | | |  \__, | 
  \____\___|_| |_|\__|\___/|____/  |____/ \__|_|  \___|\__,_|_| |_| |_|    /_/ 

Good $TIME `whoami`!"

echo "
===============================================================================
 - Hostname............: `uname -n`
 - Release.............: `cat /etc/system-release`
===============================================================================
 - Current user........: `whoami`
 - CPU Model...........: $TCPU
 - CPU usage...........: $LOAD1, $LOAD5, $LOAD15 (1, 5, 15 min)
 - Memory free/total...: $MEMORY1 / $MEMORY2
 - Swap free/total.....: $MEMORY3 / $MEMORY4
 - Kernel..............: `uname -r`
 - Processes...........: $PSA running
 - System uptime.......: $upDays days $upHours hours $upMins minutes $upSecs seconds
===============================================================================
"
